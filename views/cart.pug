doctype html
html(lang="en")
  head
    meta(charset="UTF-8")
    meta(name="viewport", content="width=device-width, initial-scale=1.0")
    title Shopping Cart - SmartHub
    link(rel="stylesheet", href="/style.css")
    script(src="/js/cart.js")
    style.
      .header-content, .footer-content {
        display: flex;
        justify-content: space-between;
        align-items: center;
      }
      .cart-container.flex {
        display: flex;
        gap: 2rem;
        margin-top: 2rem;
      }
      .cart-items {
        flex: 2;
        background: #fafafa;
        padding: 1rem;
        border-radius: 8px;
        min-height: 200px;
      }
      .cart-summary {
        flex: 1;
        background: #f5f5f5;
        padding: 1.5rem;
        border-radius: 8px;
        box-shadow: 0 2px 8px rgba(0,0,0,0.04);
      }
      .cart-summary .summary-row {
        display: flex;
        justify-content: space-between;
        margin-bottom: 0.5rem;
      }
      .cart-summary .total {
        font-weight: bold;
        font-size: 1.2em;
        margin-top: 1rem;
      }
      
      .cart-empty {
        color: #888;
        text-align: center;
        margin-top: 2rem;
      }
      img {
        width: 200px;
        
      }
  body
    header.header
      .container
        .header-content
          .logo
            .logo-icon Q
            | Smart
            span Hub
          .search-bar
            input(type="text", placeholder="Search for products...")
          .nav-links
            a(href="/") Home
            a(href="/html/about.html") About
            a(href="/html/faq.html") FAQ
            a(href="/html/login.html") Login
            a(href="cart/view", class="cart-icon") 
              |ðŸ›’
              span.cart-count
            .profile-container
              a(href="/html/profile.html")
                img(src="https://img.freepik.com/premium-vector/default-avatar-profile-icon-social-media-user-image-gray-avatar-icon-blank-profile-silhouette-vector-illustration_561158-3383.jpg?w=1380", alt="Profile", class="profile-icon")

    section.hero
      .container
        h1 Shop the latest trends
        p Discover our curated collection of high-quality products at amazing prices.
        a.btn.btn-primary(href="/") Shop Now
    main.container
      h1.page-title Shopping Cart
      .cart-container.flex
        .cart-items#cart-items
          // Cart items will be dynamically added here by JS
          .cart-empty(style="display:none") Your cart is empty.
        .cart-summary
          h2 Order Summary
          .summary-row
            span Subtotal:
            span#subtotal $0.00
          .summary-row
            span Tax (10%):
            span#tax $0.00
          .summary-row.total
            span Total:
            span#total $0.00
          button#checkout-btn.btn.btn-primary Proceed to Checkout
    footer.footer
      .container.footer-content
        .footer-column
          h3 About Smart Hub
          p Your premier destination for quantum computing and advanced semiconductor solutions. Leading the way in quantum technology.
        .footer-column
          h3 Quick Links
          ul
            li: a(href="/") Home
            li: a(href="/about.html") About Us
            li: a(href="/faq.html") FAQ
            li: a(href="/contact.html") Contact
        .footer-column
          h3 Customer Service
          ul
              li: a(href="/html/contact.html") Contact Us
              li: a(href="/html/shipping.html") Shipping Policy
              li: a(href="/html/returns.html") Return Policy
              li: a(href="/html/privacy.html") Privacy Policy
              li: a(href="/html/terms.html") Terms of Service
        .footer-column
          h3 Connect With Us
          ul
            li: a(href="https://www.facebook.com/") Facebook
            li: a(href="https://x.com/") Twitter
            li: a(href="https://www.instagram.com") Instagram
            li: a(href="https://www.linkedin.com/") LinkedIn
      .copyright
        p &copy; 2025 Smart Hub. All rights reserved.
    script(src="/js/search.js")